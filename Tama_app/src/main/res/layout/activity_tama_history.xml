<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/activity_tama_history_id"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.tama.chat.ui.activities.tamaaccount.TamaHistoryActivity"
  xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

        <include
          android:id="@+id/toolbar_tama_view"
          layout="@layout/toolbar_tama"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"/>
        <include
          android:visibility="gone"
          layout="@layout/include_layout_tab"/>
      <HorizontalScrollView
      android:layout_width="match_parent"
      android:layout_height="33dp">
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
          android:id="@+id/history_all"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:clickable="true"
          android:layout_margin="4dp"
          android:layout_weight="1"
          android:gravity="center"
          android:textStyle="bold"
          android:textColor="@color/text_dark"
          android:background="@drawable/selector_button_red_under_line"
          android:text="@string/history_all"/>

        <TextView
          android:id="@+id/history_my_tama"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:clickable="true"
          android:layout_margin="4dp"
          android:layout_weight="1"
          android:gravity="center"
          android:textStyle="bold"
          android:textColor="@color/button_red_normal"
          android:text="@string/tama_family"/>

        <TextView
          android:id="@+id/history_tama_express"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:clickable="true"
          android:layout_margin="4dp"
          android:layout_weight="1"
          android:gravity="center"
          android:textStyle="bold"
          android:textColor="@color/button_red_normal"
          android:text="@string/history_tama_express"/>

        <TextView
          android:id="@+id/history_tama_topup"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:clickable="true"
          android:layout_margin="4dp"
          android:layout_weight="1"
          android:gravity="center"
          android:textStyle="bold"
          android:textColor="@color/button_red_normal"
          android:text="@string/history_tama_topup"/>

        <TextView
          android:id="@+id/history_balance_transfer"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:clickable="true"
          android:layout_margin="4dp"
          android:layout_weight="1"
          android:gravity="center"
          android:textStyle="bold"
          android:visibility="gone"
          android:textColor="@color/button_red_normal"
          android:text="@string/history_balance_transfer"/>
      </LinearLayout>
    </HorizontalScrollView>
    </android.support.design.widget.AppBarLayout>


    <!--<FrameLayout-->
        <!--android:id="@+id/container_fragment"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->

    <android.support.v4.view.ViewPager
      android:layout_marginTop="110dp"
      android:fitsSystemWindows="true"
      android:id="@+id/vp_history_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <TextView
      android:id="@+id/error_message_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="@dimen/topup_title_text_height"
      android:text="jkvbfnvkjfnvjkfkjvk"
      android:textColor="@color/button_red_normal"
      android:paddingBottom="0dp"
      android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>
