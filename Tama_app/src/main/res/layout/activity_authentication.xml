<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.activities.authorization.AuthenticationActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
      android:id="@+id/userImageView"
      android:layout_width="160dp"
      android:layout_height="160dp"
      android:layout_marginTop="40dp"
      android:layout_gravity="center"
      android:src="@drawable/placeholder_rect_user" />

    <Button
      android:id="@+id/chooseImage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:textAllCaps="true"
      android:layout_gravity="center"
      android:text="Choose Photo" />

    <android.support.design.widget.TextInputLayout
      android:layout_marginTop="24dp"
      android:id="@+id/first_name_textinputlayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/padding_large"
      android:paddingRight="@dimen/padding_large">

      <EditText
        android:inputType="textPersonName"
        android:id="@+id/first_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Firstname"
        android:imeOptions="actionDone" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
      android:layout_marginTop="16dp"
      android:id="@+id/last_name_textinputlayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/padding_large"
      android:paddingRight="@dimen/padding_large">

      <EditText
        android:inputType="textPersonName"
        android:id="@+id/last_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lasttname"
        android:imeOptions="actionDone" />

    </android.support.design.widget.TextInputLayout>



    <Button
      android:id="@+id/finishAuthentication"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="80dp"
      android:layout_gravity="center|bottom"
      android:text="Finish" />
  </LinearLayout>

</ScrollView>
