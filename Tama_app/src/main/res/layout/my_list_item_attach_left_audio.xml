<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_widget_attach_audio_left"
    style="@style/ListItemAudioMessage.Left">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/msg_image_avatar"
      android:layout_gravity="bottom"
        style="@style/AvatarImageViewStyle.Left" />

    <RelativeLayout
        android:id="@+id/msg_bubble_background"
        style="@style/BubbleAttachAudioFrame.Left">

        <com.quickblox.ui.kit.chatmessage.adapter.media.view.QBPlaybackControlView
            android:id="@+id/msg_audio_attach"
            style="@style/AudioViewAttach.Left" />

        <TextView
          android:id="@+id/snap_image_view"
          style="@style/AudioViewAttach.Left"
          android:layout_height="match_parent"
          android:gravity="center"
          android:background="@color/white"
          android:visibility="visible"/>

        <include layout="@layout/my_widget_item_attach_left" />

    </RelativeLayout>

</LinearLayout>