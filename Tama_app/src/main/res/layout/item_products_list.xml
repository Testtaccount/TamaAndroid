<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/tama_light_grey">
    <ImageView
        android:id="@+id/item_products_image"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@drawable/world_icon"/>
    <TextView
        android:id="@+id/item_products_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="sdfgstr"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/item_products_image"
        android:textColor="@color/tama_account_text"
        android:background="@color/tama_light_green"
        android:textSize="14sp"/>
</RelativeLayout>