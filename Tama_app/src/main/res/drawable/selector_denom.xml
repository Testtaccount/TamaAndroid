<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_selected="false">
        <shape>
            <solid android:color="@color/white" />
            <stroke
              android:width="1dp"
              android:color="@color/black" />
            <corners
                android:bottomLeftRadius="@dimen/corners_small_value"
                android:bottomRightRadius="@dimen/corners_small_value"
                android:topLeftRadius="@dimen/corners_small_value"
                android:topRightRadius="@dimen/corners_small_value" />
        </shape>
    </item>
    <item android:state_selected="true" >
        <shape>
            <solid android:color="@color/button_red_pressed" />
            <corners
                android:bottomLeftRadius="@dimen/corners_small_value"
                android:bottomRightRadius="@dimen/corners_small_value"
                android:topLeftRadius="@dimen/corners_small_value"
                android:topRightRadius="@dimen/corners_small_value" />
        </shape>
    </item>

</selector>