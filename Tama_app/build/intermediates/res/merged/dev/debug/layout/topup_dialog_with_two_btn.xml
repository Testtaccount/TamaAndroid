<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:textStyle="bold"
        android:textSize="@dimen/topup_dialog_smoll_text_size"
        android:text="@string/sorry_your_balance_is_low_please_topup_your_mytama_account"
        android:textColor="@color/tama_account_black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/topup_button"
            android:layout_width="@dimen/topup_dialog_button_width"
            android:layout_height="@dimen/topup_dialog_button_height"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/selector_button_green_oval"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal|bottom"
            android:text="@string/topup"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="@dimen/topup_dialog_button_text_size" />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="@dimen/topup_dialog_button_width"
            android:layout_height="@dimen/topup_dialog_button_height"
            android:background="@drawable/selector_button_red_oval"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal|bottom"
            android:text="@string/continue_btn"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="@dimen/topup_dialog_button_text_size" />

    </LinearLayout>

</LinearLayout>