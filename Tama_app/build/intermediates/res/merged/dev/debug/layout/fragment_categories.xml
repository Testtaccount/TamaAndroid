<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.tama.chat.ui.fragments.tamaaccount.CountriesFragment">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

        <TextView
          android:id="@+id/fragment_title_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/categories"
          android:textColor="@color/tama_account_text"
          android:textStyle="bold"
          android:textSize="15sp"
          android:padding="3dp"
          android:background="@color/button_red_normal"/>

        <ListView
          android:id="@+id/categories_list_view"
          android:paddingTop="10dp"
          tools:listitem="@layout/item_categories_list"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_below="@+id/fragment_title_text" />

    </RelativeLayout>
</FrameLayout>
