<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  android:layout_height="wrap_content"
  android:layout_width="wrap_content"
  android:id="@+id/item_history_card_root"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="130dp"
      android:gravity="center">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_weight="1">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="10dp"
                  android:layout_marginEnd="10dp"
                  android:textColor="@color/black"
                  android:textStyle="bold"
                  android:text="@string/order_no"/>
                <TextView
                  android:id="@+id/history_id"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:text="056546465"
                  android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
              android:id="@+id/history_timestamp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="2017-06-09 10:08:05"/>
            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

                <ImageView
                  android:id="@+id/history_image"
                  android:layout_width="70dp"
                  android:layout_height="70dp"
                  android:layout_margin="5dp"/>
                <TextView
                  android:id="@+id/history_header_status"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:textStyle="bold"
                  android:text="MyTama Account Topup"
                  android:layout_alignTop="@+id/history_image"
                  android:layout_toRightOf="@+id/history_image"
                  android:layout_toEndOf="@+id/history_image" />
                <TextView
                  android:id="@+id/mobile_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:textStyle="bold"
                  android:text="@string/mobile"
                  android:layout_below="@+id/history_header_status"
                  android:layout_toRightOf="@+id/history_image"
                  android:layout_toEndOf="@+id/history_image"/>
                <TextView
                  android:layout_marginLeft="16dp"
                  android:id="@+id/history_mobile_no"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:textStyle="bold"
                  android:text="37493111111"
                  android:layout_below="@+id/history_header_status"
                  android:layout_toRightOf="@+id/mobile_text"
                  android:layout_toEndOf="@+id/mobile_text"/>
                <TextView
                  android:ellipsize="end"
                  android:id="@+id/history_status"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/history_mobile_no"
                  android:layout_toRightOf="@+id/history_image"
                  android:layout_toEndOf="@+id/history_image"
                  android:text="Your order was successful"/>
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:padding="5dp">
            <TextView
              android:id="@+id/history_amount"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignParentRight="true"
              android:textColor="@color/black"
              android:textSize="22sp"
              android:textStyle="bold"
              android:text="177.45 â‚¬"/>
            <TextView
              android:id="@+id/history_view_btn"
              android:layout_width="70dp"
              android:layout_height="30dp"
              android:layout_alignParentBottom="true"
              android:layout_alignParentEnd="true"
              android:layout_alignParentRight="true"
              android:gravity="center"
              android:clickable="true"
              android:background="@drawable/selector_button_red_border_oval"
              android:textSize="18sp"
              android:textColor="@color/button_red_normal"
              android:text="@string/view"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
