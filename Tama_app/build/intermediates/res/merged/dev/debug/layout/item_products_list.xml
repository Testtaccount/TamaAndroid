<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="220dp"
  android:background="@color/tama_light_grey"
  android:orientation="vertical">
    <ImageView
      android:id="@+id/item_products_image"
      android:layout_width="185dp"
      android:layout_height="185dp"
      android:layout_gravity="center"
      android:padding="5dp"
      android:scaleType="fitCenter"
      android:src="@drawable/world_icon" />
    <TextView
      android:id="@+id/item_products_name"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="35dp"
      android:background="@color/tama_light_green"
      android:gravity="center"
      android:text="sdfgstr"
      android:textColor="@color/tama_account_text"
      android:textSize="14sp" />
</LinearLayout>